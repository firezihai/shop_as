<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_title_new">
        <TextView
            android:id="@+id/tv_headTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/login"
            android:textColor="@color/pub_color_three"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="@color/transparent"
            android:text="@string/edit"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            style="@style/AppTheme.Btn"/>
    </RelativeLayout>


    <ExpandableListView
        android:id="@+id/lv_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_head"
        android:paddingBottom="50dp"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:groupIndicator="@null"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:divider="@null"/>

    <LinearLayout
        android:id="@+id/ll_cart_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_dcdcdc"/>
        <RelativeLayout
            android:id="@+id/rl_cart_settle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            <CheckBox
                android:id="@+id/cb_cart_settle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/addr_checkbox_bg"
                android:button="@null"
                android:clickable="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/cb_cart_settle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="@string/all_select"
                android:textSize="13sp"
                android:textColor="@color/pub_color_three"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/tv_cart_settle"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_cart_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/cart_amount"
                    android:textSize="14sp"
                    android:textColor="@color/pub_color_three"/>
                <TextView
                    android:id="@+id/tv_ship_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/include_ship_fee"
                    android:textSize="12sp"
                    android:textColor="@color/pub_color_three"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cart_settle"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/btn_cart_bg"
                android:text="@string/goto_settle"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_cart_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="@color/white">
            <CheckBox
                android:id="@+id/cb_cart_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/addr_checkbox_bg"
                android:button="@null" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/cb_cart_delete"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_select"
                    android:textSize="14sp"
                    android:textColor="@color/pub_color_three"/>
                <TextView
                    android:id="@+id/tv_cart_del_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="@string/choose_goods"
                    android:textSize="14sp"
                    android:textColor="@color/pub_color_three"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cart_delete"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/btn_cart_bg"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
