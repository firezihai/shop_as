<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="21dp"
    android:gravity="center_vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_top_line"
            android:layout_width="0.5dp"
            android:layout_height="12dp"
            android:background="@color/color_dcdcdc"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/iv_deliver_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/deliverydetails_icon"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_dcdcdc"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="14dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_deliver_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#707070"
            android:text="ddddddd"
            android:gravity="top"
            android:autoLink="phone"/>
        <TextView
            android:id="@+id/tv_deliver_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textColor="#707070"
            android:text="" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1px"
            android:background="@color/color_dcdcdc"/>
    </LinearLayout>
</LinearLayout>