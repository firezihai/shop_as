<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/color_f8f8f8"
        android:orientation="horizontal">
        <ImageView
            android:id="@id/goodsImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_gray_one_border"
            android:src="@drawable/goods"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@id/goodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_alignParentTop="true"
                android:maxLines="2"
                android:lineSpacingExtra="2dp"
                android:ellipsize="end"
                android:text="中式吊篮/吊椅 YTMJ-6605DL-DY"
                android:textSize="13sp"
                android:textColor="@color/color_333333"/>
            <TextView
                android:id="@+id/goodsSpec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/goodsName"
                android:text="ddddddddd"
                android:textSize="13sp"
                android:textColor="@color/color_999999"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/goodsPayPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="￥60"
                    android:textSize="14dp"
                    android:textColor="@color/color_333333"/>
                <TextView
                    android:id="@+id/goodsNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="x1"
                    android:textSize="14dp"
                    android:textColor="@color/color_999999"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
