<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="bottom"
	android:background="@color/color_f2f2f2">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="43dp"
		android:background="@color/white">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/select_addr"
			android:textSize="14sp"
			android:textColor="@color/text_color"/>
		<ImageView
			android:id="@+id/iv_close"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:padding="10dp"
			android:src="@drawable/btn_address_fork"/>
		<View
			android:layout_width="1px"
			android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:background="@color/color_dcdcdc"
			android:layout_toLeftOf="@+id/iv_close"/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/color_dcdcdc"/>
	<RadioGroup
        android:id="@+id/rg_area_select"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:background="@color/white">
		<RadioButton
			android:id="@+id/rb_province"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:checked="false"
			android:button="@null"
			android:text="@string/select_province"
			android:textSize="13sp"
			android:textColor="@color/text_color"/>
		<RadioButton
			android:id="@+id/rb_city"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:checked="false"
			android:button="@null"
			android:text="@string/select_city"
			android:textSize="13sp"
			android:textColor="@color/text_color"/>
		<RadioButton
			android:id="@+id/rb_district"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:checked="false"
			android:button="@null"
			android:text="@string/select_district"
			android:textSize="13sp"
			android:textColor="@color/text_color"/>
	</RadioGroup>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/color_d9d9d9">
		<View
            android:id="@+id/view_line"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="@drawable/bg_address_line_selected"/>
	</FrameLayout>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<ListView
            android:id="@+id/lv_address"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fadingEdge="none"
			android:divider="@null"
			android:cacheColorHint="#00000000"
			android:listSelector="@color/orange"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center">
			<TextView
				android:id="@+id/tv_paddingTop"
				android:layout_width="wrap_content"
				android:layout_height="0dp" />
			<RelativeLayout
                android:id="@+id/rv_progress_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_below="@+id/tv_paddingTop">
				<ProgressBar
					android:id="@+id/progressbar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fadingEdge="none"
					android:layout_centerVertical="true"
					style="@android:style/Widget.ProgressBar.Small.Inverse"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="5dp"
					android:layout_toRightOf="@id/progressbar"
					android:text="@string/loading"
					android:textSize="10sp"
					android:textColor="@color/black"/>
			</RelativeLayout>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/tv_paddingTop"
				android:visibility="gone"
				android:background="@drawable/title_btn_pressed_bg"
				android:text="重试"
				android:textColor="@color/black"
				android:textSize="12sp"
				android:layout_centerVertical="true"/>
		</RelativeLayout>
	</FrameLayout>
</LinearLayout>