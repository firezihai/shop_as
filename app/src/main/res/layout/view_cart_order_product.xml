<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="10dp"
	android:paddingRight="10dp"
	android:paddingTop="12dp"
	android:paddingBottom="8dp"
	android:background="@color/white">
	<RelativeLayout
		android:id="@+id/rl_goods_image"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:background="@drawable/goods_bg">
		<ImageView
			android:id="@+id/iv_goods_image"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:src="@drawable/goods"
			android:layout_centerVertical="true"/>
	</RelativeLayout>
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="60dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_toRightOf="@id/rl_goods_image"
		android:layout_toLeftOf="@+id/iv_arrow">
		<TextView
			android:id="@+id/tv_goods_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:singleLine="true"
			android:ellipsize="end"
			android:text="mmmmmmmmmmmddddddddddddddddddddddddddddddddddddm"
			android:textSize="14sp"
			android:textColor="@color/text_color" />
		<TextView
			android:id="@+id/tv_goods_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:text="999.999"
			android:textColor="@color/price_color_dark"
			android:textSize="14sp"
			android:singleLine="true"
			android:ellipsize="end" />
		<TextView
			android:id="@+id/tv_goods_num"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="x1"
			android:textSize="14sp"
			android:textColor="@color/color_707070"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"/>
	</RelativeLayout>
	<ImageView
		android:id="@+id/iv_arrow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/arrow_next"/>
</RelativeLayout>