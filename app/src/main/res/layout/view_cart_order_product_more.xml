<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp"
	android:background="@color/white">
	<LinearLayout
		android:id="@+id/ll_goods_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:orientation="horizontal"/>
	<ImageView
		android:id="@+id/iv_more"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_toRightOf="@+id/ll_goods_image"
		android:layout_toLeftOf="@id/tv_product_num"
		android:layout_centerVertical="true"
		android:src="@drawable/button_ellipsis"/>
	<TextView
		android:id="@id/tv_product_num"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/iv_arrow"
		android:layout_marginRight="12dp"
		android:text="@string/num_item_format"
		android:textSize="14sp"
		android:textColor="@color/text_color"/>
	<ImageView
		android:id="@id/iv_arrow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:src="@drawable/arrow_next" />
</RelativeLayout>