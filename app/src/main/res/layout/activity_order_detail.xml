<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scrollbars="none">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/color_f8f8f8"
			android:orientation="vertical">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:paddingLeft="14dp"
				android:paddingRight="14dp"
				android:background="@color/white">
				<TextView
					android:id="@+id/tv_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_alignParentLeft="true"
					android:gravity="center"
					android:text="订单号："
					android:textSize="14dp"
					android:textColor="@color/color_999999" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_toRightOf="@id/tv_label"
					android:gravity="center"
					android:text="444444444"
					android:textSize="14dp"
					android:textColor="@color/pub_color_three" />
				<Button
					android:layout_width="70dp"
					android:layout_height="30dp"
					android:layout_alignParentRight="true"
					android:layout_centerInParent="true"
					android:text="复制"
					android:visibility="gone"
					style="@style/orderGreyBtn" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerInParent="true"
					android:text="已完成"
					android:textColor="@color/price_color"/>
			</RelativeLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="@color/color_dcdcdc"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:paddingLeft="14dp"
				android:paddingRight="14dp"
				android:background="@color/white"
				android:orientation="horizontal">
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="10dp"
					android:src="@drawable/order_icon_address"
					android:layout_gravity="center_vertical"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:layout_weight="1"
					android:orientation="vertical">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/tv_member_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="买家"
							android:textColor="@color/pub_color_three"
							android:textSize="14sp"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="15dp"
							android:text="10000000000"
							android:textSize="14sp"
							android:textColor="@color/pub_color_three" />
					</LinearLayout>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp"
						android:text="北京市朝阳区王府井王府井大街中关村E世界大厦400号"
						android:textSize="14sp"
						android:textColor="@color/color_999999"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="@color/color_dcdcdc"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:background="@color/white"
				android:orientation="vertical">
				<RelativeLayout
					android:id="@+id/rl_shop_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="14dp"
					android:paddingRight="14dp"
					android:paddingTop="10dp"
					android:paddingBottom="10dp">
					<ImageView
						android:id="@+id/iv_shop_icon"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_alignParentLeft="true"
						android:src="@drawable/public_icon_shop"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_toRightOf="@+id/iv_shop_icon"
						android:layout_marginLeft="10dp"
						android:text="@string/app_name"
						android:textColor="@color/pub_color_three"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:text="完成"
						android:textColor="@color/pub_color_three"
						android:textSize="14sp" />
				</RelativeLayout>
				<LinearLayout
					android:id="@+id/ll_order_goods_list"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"/>
				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:background="@color/color_dcdcdc"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingTop="10dp"
					android:paddingBottom="10dp">
					<Button
						android:layout_width="100dp"
						android:layout_height="30dp"
						android:layout_gravity="center"
						style="@style/orderGreyBtn"
						android:text="在线客服"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="@color/color_dcdcdc"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="14dp"
				android:paddingRight="14dp"
				android:background="@color/white"
				android:gravity="center_vertical"
				android:orientation="vertical">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="10dp"
					android:paddingBottom="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerInParent="true"
						android:text="支村方式"
						android:textColor="@color/pub_color_three"
						android:textSize="14sp"/>
					<TextView
						android:id="@+id/tv_payment_type"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_alignParentRight="true"
						android:text="电子发票"
						android:textSize="14sp"
						android:textColor="@color/pub_color_three"/>
				</RelativeLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:background="@color/color_dcdcdc"/>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="10dp"
					android:paddingBottom="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerInParent="true"
						android:text="配送方式"
						android:textColor="@color/pub_color_three"
						android:textSize="14sp"/>
					<TextView
						android:id="@+id/tv_ship_type"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_alignParentRight="true"
						android:text="电子发票"
						android:textSize="14sp"
						android:textColor="@color/pub_color_three"/>
				</RelativeLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:background="@color/color_dcdcdc"/>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="10dp"
					android:paddingBottom="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerInParent="true"
						android:text="发票信息"
						android:textColor="@color/pub_color_three"
						android:textSize="14sp"/>
					<TextView
						android:id="@+id/tv_fapiao_type"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_alignParentRight="true"
						android:text="电子发票"
						android:textSize="14sp"
						android:textColor="@color/pub_color_three"/>
				</RelativeLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="发票抬头："
						android:textColor="@color/color_999999"
						android:textSize="14sp"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="个人"
						android:textSize="14sp"
						android:textColor="@color/color_999999"/>
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="发票内容："
						android:textColor="@color/color_999999"
						android:textSize="14sp"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="个人"
						android:textSize="14sp"
						android:textColor="@color/color_999999"/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:paddingLeft="14dp"
				android:paddingRight="14dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:background="@color/white"
				android:orientation="vertical">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="10dp"
					android:paddingBottom="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerInParent="true"
						android:text="商品总额"
						android:textColor="@color/pub_color_three"
						android:textSize="14sp"/>
					<TextView
						android:id="@+id/tv_goods_amount"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_alignParentRight="true"
						android:text="电子发票"
						android:textSize="14sp"
						android:textColor="@color/price_color"/>
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="10dp"
					android:paddingBottom="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerInParent="true"
						android:text="运费"
						android:textColor="@color/color_999999"
						android:textSize="14sp"/>
					<TextView
						android:id="@+id/tv_ship_amount"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_alignParentRight="true"
						android:text="40"
						android:textSize="14sp"
						android:textColor="@color/price_color"/>
				</RelativeLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:background="@color/color_dcdcdc"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:orientation="horizontal"
					android:gravity="right|center">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="实付款："
						android:textSize="16sp"
						android:textColor="@color/pub_color_three"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/money_unit"
						android:textSize="16sp"
						android:textColor="@color/price_color"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="400"
						android:textSize="16sp"
						android:textColor="@color/price_color"/>
				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:orientation="horizontal"
					android:gravity="right|center">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="下单时间："
						android:textSize="13sp"
						android:textColor="@color/color_999999"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="2010-08-09 09:51:30"
						android:textSize="13sp"
						android:textColor="@color/color_999999"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@color/white"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:paddingLeft="14dp"
		android:paddingRight="14dp"
		android:orientation="horizontal"
		android:gravity="right|center">
		<Button
			android:layout_width="70dp"
			android:layout_height="30dp"
			android:layout_marginLeft="8dp"
			style="@style/orderGreyBtn"
			android:text="删除订单"/>
		<Button
			android:layout_width="70dp"
			android:layout_height="30dp"
			android:layout_marginLeft="8dp"
			style="@style/orderGreyBtn"
			android:text="评价晒单"/>
		<Button
			android:layout_width="70dp"
			android:layout_height="30dp"
			android:layout_marginLeft="8dp"
			style="@style/orderOrangeBtn"
			android:text="再次购买"/>
		<Button
			android:layout_width="70dp"
			android:layout_height="30dp"
			android:layout_marginLeft="8dp"
			style="@style/orderRedBtn"
			android:text="订单支付"/>
	</LinearLayout>
</RelativeLayout>