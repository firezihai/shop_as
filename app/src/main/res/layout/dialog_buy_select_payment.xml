<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="bottom"
	android:background="@color/color_f2f2f2">
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/color_dcdcdc"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:gravity="center"
		android:text="@string/payment_type"
		android:textSize="16sp"
		android:textColor="@color/text_color"
		android:background="@color/white"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/color_dcdcdc"/>
	<RelativeLayout
		android:id="@+id/ll_online"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:gravity="center_vertical"
		android:orientation="vertical"
		android:background="@color/white">
		<TextView
			android:id="@+id/tv_online"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:text="在线支付"
			android:textSize="14sp"
			android:textColor="@color/text_color" />
		<ImageView
			android:id="@+id/iv_online"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@drawable/bg_buy_select"/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/color_dcdcdc"/>
	<RelativeLayout
		android:id="@+id/ll_offline"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:gravity="center_vertical"
		android:orientation="vertical"
		android:background="@color/white">
		<TextView
			android:id="@+id/tv_offline"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:text="货到支付"
			android:textSize="14sp"
			android:textColor="@color/color_999999" />
		<ImageView
			android:id="@+id/iv_offline"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:enabled="false"
			android:background="@drawable/bg_buy_select"/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/color_dcdcdc"/>
	<RelativeLayout
		android:id="@+id/ll_chain"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:gravity="center_vertical"
		android:orientation="vertical"
		android:background="@color/white">
		<TextView
			android:id="@+id/tv_chain"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:text="门店支付"
			android:textSize="14sp"
			android:textColor="@color/color_999999" />
		<ImageView
			android:id="@+id/iv_chain"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:enabled="false"
			android:src="@drawable/bg_buy_select"/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/color_dcdcdc"/>
	<Button
		android:id="@+id/btn_close"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="@color/white"
		android:text="@string/close"
		android:textSize="14sp"
		android:textColor="@color/text_color"
		style="@style/AppTheme.Btn"/>
</LinearLayout>