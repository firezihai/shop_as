<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#dddddd"/>
	<RelativeLayout
		android:id="@+id/rl_cart_promotion"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:paddingRight="14dp"
		android:visibility="gone">
		<CheckBox
			android:id="@+id/cb_zhanwei"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@null"
			android:background="@null"
			android:drawableLeft="@drawable/addr_checkbox_bg"
			android:paddingLeft="14dp"
			android:paddingRight="14dp"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:visibility="invisible"/>
		<TextView
			android:id="@+id/tv_cart_promotion"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/label_cuxiao"
			android:layout_marginTop="19dp"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:text="满 减"
			android:textSize="12sp"
			android:textColor="@color/white"/>
		<TextView
			android:id="@+id/tv_cart_promotion_detail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/cb_zhanwei"
			android:layout_toLeftOf="@+id/tv_cart_choose_buy"
			android:layout_marginTop="12dp"
			android:paddingBottom="10dp"
			android:gravity="center_vertical"
			android:text="fsgaaqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqfggggggggggggggggggggggggggggggggbbbbbbbbb"
			android:textSize="13sp"
			android:textColor="@color/color_333333"
			/>
		<TextView
			android:id="@+id/tv_cart_choose_buy"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginTop="19dp"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:background="@drawable/label_cuxiao"
			android:text="选购商品"
			android:textColor="@color/white"
			android:textSize="12sp"/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/rl_product_item_center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/rl_cart_promotion">
		<LinearLayout
			android:id="@+id/ll_checkbox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:paddingLeft="14dp"
			android:paddingRight="14dp"
			android:descendantFocusability="blocksDescendants"
			android:layout_centerVertical="true">
			<CheckBox
				android:id="@+id/cb_product"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/addr_checkbox_bg"
				android:button="@null"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"/>
		</LinearLayout>
		<View
			android:id="@+id/top_line"
			android:layout_width="match_parent"
			android:layout_height="14dp"
			android:layout_toRightOf="@+id/ll_checkbox"
			android:layout_alignParentTop="true"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingRight="10dp"
			android:layout_toRightOf="@+id/ll_checkbox"
			android:layout_below="@+id/top_line">
			<ImageView
				android:id="@+id/iv_product_image"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:scaleType="fitXY"/>
			<TextView
				android:id="@+id/tv_product_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_toRightOf="@+id/iv_product_image"
				android:layout_alignParentTop="true"
				android:gravity="center_vertical"
				android:ellipsize="end"
				android:textSize="14sp"
				android:textColor="@color/color_333333"
				android:text="@string/app_name"
				android:maxLines="2" />
			<TextView
				android:id="@+id/tv_product_describe"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginTop="8dp"
				android:layout_toRightOf="@+id/iv_product_image"
				android:layout_below="@+id/tv_product_name"
				android:visibility="gone"
				android:text=""
				android:textColor="@color/color_999999"
				android:textSize="12sp"
				/>
			<TextView
				android:id="@+id/tv_product_special"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="8dp"
				android:layout_toRightOf="@id/iv_product_image"
				android:layout_below="@id/tv_product_describe"
				android:paddingLeft="3dp"
				android:paddingRight="3dp"
				android:text="@string/save"
				android:textSize="12sp"
				android:textColor="@color/white"
				android:background="@drawable/cart1_down_price"
				/>
			<TextView
				android:id="@+id/tv_product_price"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/iv_product_image"
				android:layout_alignBottom="@id/iv_product_image"
				android:layout_marginLeft="10dp"
				android:singleLine="true"
				android:text="40.99"
				android:textSize="12sp"
				android:textColor="@color/price_color_dark"/>
			<TextView
				android:id="@+id/tv_product_num"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@id/iv_product_image"
				android:layout_alignParentRight="true"
				android:visibility="gone"
				android:singleLine="true"
				android:text="x1"
				android:textSize="12sp"
				android:textColor="@color/color_999999"/>
			<LinearLayout
				android:id="@+id/ll_edit_product_num"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@id/iv_product_image"
				android:layout_alignParentRight="true"
				android:layout_marginLeft="12dp"
				android:orientation="horizontal"
				android:gravity="center|right|bottom">
				<ImageView
					android:id="@+id/iv_edit_sub"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:scaleType="centerInside"
					android:layout_gravity="left"
					android:background="@drawable/shoppingcart_sub_btn_enabled"/>
				<TextView
					android:id="@+id/tv_edit_product_num"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/shoppingcart_numtext_bg"
					android:layout_weight="1"
					android:gravity="center"
					android:inputType="number"
					android:selectAllOnFocus="true"
					android:text="1"
					android:textSize="12sp"
					android:textColor="@color/pub_color_three"
					android:maxLength="2"/>
				<ImageView
					android:id="@+id/iv_edit_add"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:scaleType="fitXY"
					android:layout_centerVertical="true"
					android:background="@drawable/shoppingcart_add_btn_enabled"/>
			</LinearLayout>

		</RelativeLayout>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/ll_all_git_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/rl_product_item_center"
		android:orientation="horizontal"
		android:visibility="gone">
		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/addr_checkbox_bg"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:visibility="invisible"/>
		<LinearLayout
			android:id="@+id/ll_git_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/ll_bottom_divider"
		android:layout_width="match_parent"
		android:layout_height="14dp"
		android:layout_below="@+id/ll_all_git_layout">
		<View
			android:id="@+id/view_line"
			android:layout_width="1dp"
			android:layout_height="14dp"
			android:layout_marginLeft="35dp"
			android:visibility="gone"
			android:background="@color/color_dcdcdc"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/ll_accessorychild"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/ll_bottom_divider"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp"
		android:visibility="gone">
		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/addr_checkbox_bg"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:visibility="invisible"/>
		<TextView
			android:id="@+id/tv_accessorychild"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="配件"
			android:textSize="12sp"
			android:textColor="@color/color_333333"/>
	</LinearLayout>
</RelativeLayout>