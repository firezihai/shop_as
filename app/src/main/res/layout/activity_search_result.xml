<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SearchResultActivity">
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f2f2">
        <com.fengbeibei.shop.widget.PullLoadRecyclerView
            android:id="@+id/pull_search_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.fengbeibei.shop.widget.SearchPageView
            android:id="@+id/search_page_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:visibility="gone"/>
        <com.fengbeibei.shop.widget.SearchNoResult
            android:id="@+id/search_no_result_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:visibility="gone"/>
        <com.fengbeibei.shop.widget.SearchNetErrorView
            android:id="@+id/netErrorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="93.0dip" />
        <View android:id="@+id/search_mask"
              android:background="#49000000"
              android:visibility="gone"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" />
        <LinearLayout
            android:id="@+id/ll_search_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_search_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.fengbeibei.shop.widget.SearchHeaderView
                    android:id="@+id/searchHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.fengbeibei.shop.widget.SearchTab
                    android:id="@+id/searchTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>